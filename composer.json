{
  "name": "phpxmlrpc/all-in-one",
  "license": "BSD-3-Clause",
  "description": "Pulling together all the different phpxmlrpc packages to provide batteries-included demo servers and debuggers",
  "require": {
    "phpxmlrpc/phpxmlrpc": "^4.11.5",
    "phpxmlrpc/jsonrpc": "^1.0.1",
    "phpxmlrpc/extras": "^1.0.1"
  },
  "scripts": {
    "post-install-cmd": [
      "chmod 755 ./vendor/phpxmlrpc/phpxmlrpc/taskfile",
      "./vendor/phpxmlrpc/phpxmlrpc/taskfile setup_debugger_visualeditor",
      "chmod 755 ./vendor/phpxmlrpc/jsonrpc/taskfile",
      "./vendor/phpxmlrpc/jsonrpc/taskfile setup_debugger_visualeditor",
      "./bin/cleanup.sh"
    ],
    "post-update-cmd": [
      "./bin/cleanup.sh"
    ]
  },
  "config": {
    "preferred-install": {
      "phpxmlrpc/phpxmlrpc": "source",
      "phpxmlrpc/jsonrpc": "source",
      "phpxmlrpc/extras": "source",
      "*": "dist"
    }
  }
}
